<%- include('../partials/header') %>

<main class="container">
    <section class="item">
        <picture class="card-item__cover">
            <img class="card-item__img--front" src="../../img/<%- item.productImageFront %>" alt="<%- item.productDescription %>">
            <img class="card-item__img--back" src="../../img/<%- item.productImageBack %>" alt="<%- item.productDescription %>">
        </picture>
        <article class="item__info">
            <p class="item__licence"><%- item.licenceName %></p>
            <h3 class="item__name"><%- item.productName %></h3>
            <p class="item__description"><%- item.productDescription %></p>
            <p class="item__price"><%- item.productPrice %></p>
            <div class="item__cart">
                <div class="item__cart__quantity">
                    <input class="item__input" type="number" name=""  placeholder="0" id="quantity" value="0">
                    <div class="item__cart__buttons">
                        <button class="item__quantity--button" id="add" type="button"><img src="../../img/icons/add.png"></button>
                        <button class="item__quantity--button" id="subtract" type="button"><img src="../../img/icons/subtract.png"></button>
                    </div>
                </div>
                <div class="item__agregar__button">
                    <button class="btn__primary item__agregar__button__font" type="submit" id="submit_addCart">Agregar al Carrito</button>
                </div>
                
            </div>
            <p class="item__promo"><a class="item__promo__link" href="">Ver Métodos de Pago</a> - 3 CUOTAS SÍN INTERÉS</p>
        </article>
       
    </section>
    
</main>

