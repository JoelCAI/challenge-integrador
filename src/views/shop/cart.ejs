<%- include('../partials/header') %>
<main class="container">
    <section class="cart__title__container">
        <p class="cart__title">Carrito de Compras</p>
    </section>
    <section class="cart__attribute__container">
        <p class="cart__attribute__font">Detalle de Producto</p>
