                    <div class="item__cart__buttons item__cart__modified">
                        <button class="item__quantity--button btn__primaryColor" id="addCart" type="button"><img src="../../img/icons/add.png"></button>
                        <button class="item__quantity--button btn__primaryColor" id="subtractCart" type="button"><img src="../../img/icons/subtract.png"></button>
                    </div>
                </div>
            </div>
        </div>
