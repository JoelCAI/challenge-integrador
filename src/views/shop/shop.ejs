<%- include('../partials/header') %>
<main class="container product">
    <section class="formQuery">
        <p class="formQuery__title">Buscar</p>
        <input type="text" class="inputText formQuery__buscar" id="formQueryBuscar" placeholder="item o categoría">
        <p class="formQuery__order">Ordenar por</p>
        <select class="selectOption selectOption__shop" name="formOrden" id="form__Orden" >
            <option value="gray" disable selected>Mayor a Menor</option>
            <option class="selectionDefaultColor" value="Orden 1">Orden 1</option>
            <option class="selectionDefaultColor" value="Orden 2">Orden 2</option>
            <option class="selectionDefaultColor" value="Orden 3">Orden 3</option>
            <option class="selectionDefaultColor" value="Orden 4">Orden 4</option>
            <option class="selectionDefaultColor" value="Orden 5">Orden 5</option>
        </select>
        <p class="formQuery__price--title">Precio</p>
        <div class="formQuery__price__block">
            <p class="formQuery__input__price">min</p>
            <input class="formQuery__input__range" type="number" name="" id="formQuery__input__price--min" placeholder="0">
            <img class="formQuery__input__range__img" src="../../img/icons/subtractB.png" alt="guion">
            <p class="formQuery__input__price">max</p>
            <input class="formQuery__input__range" type="number" name="" id="formQuery__input__price--max" placeholder="0">
        </div>
        <p class="formQuery__filter">Filtrar</p>
        <div class="formQuery__checkbox">
            <div class="formQuery__checkbox__filter">
                <input type="checkbox" class="formQuery__checkbox__input" name="formQuery__checkbox__shop" id="formQuery__checkbox__nuevos" value="nuevos">
                <label class="formQuery__checkbox__label" for ="formQuery__checkbox__nuevos" ><img id="checkbox__filter__nuevos__img" class="formQuery__checkbox__filter__img" src="../../img/icons/Check.png" alt="checkbox check">Nuevos</label>
            </div>
            <div class="formQuery__checkbox__filter">
                <input type="checkbox" class="formQuery__checkbox__input" name="formQuery__checkbox__shop" id="formQuery__checkbox__ofertas" value="ofertas">
                <label class="formQuery__checkbox__label" for ="formQuery__checkbox__ofertas" ><img id="checkbox__filter__ofertas__img" class="formQuery__checkbox__filter__img" src="../../img/icons/Check.png" alt="checkbox check">Ofertas</label>
            </div>
            <div class="formQuery__checkbox__filter">
                <input type="checkbox" class="formQuery__checkbox__input" name="formQuery__checkbox__shop" id="formQuery__checkbox__edicionEspecial" value="edicionEspecial">
                <label class="formQuery__checkbox__label" for ="formQuery__checkbox__edicionEspecial" ><img id="checkbox__filter__edicionEspecial__img" class="formQuery__checkbox__filter__img" src="../../img/icons/Check.png" alt="checkbox check">Edición Especial</label>
            </div>
            <div class="formQuery__checkbox__filter">
                <input type="checkbox" class="formQuery__checkbox__input" name="formQuery__checkbox__shop" id="formQuery__checkbox__favoritos" value="favoritos">
                <label class="formQuery__checkbox__label" for ="formQuery__checkbox__favoritos" ><img id="checkbox__filter__favoritos__img" class="formQuery__checkbox__filter__img" src="../../img/icons/Check.png" alt="checkbox check">Favoritos</label>
            </div>
            <!-- <button id="pruebaShop">Prueba</button> -->

        </div>
    </section>
    <section class="productList">
        <section class="productList__container">
            <% items.forEach(item => { %>
                <article class="card-item">
                    <a class="card-item__link" href="/shop/item/<%= item.productId%>">
                        <picture class="card-item__cover cardShopPicture__height">
                            <span class="card-item__tag">Nuevo</span>
                            <img class="card-item__img--front" src="../../img<%- item.productImageFront %>" alt="Figura de la saga Star Wars">
                            <img class="card-item__img--back" src="../../img<%- item.productImageBack %>" alt="Figura de la saga Star Wars en caja">
                        </picture>
                        <div class="card-item__content cardShopContent__height">
                            <p class="card-item__licence"><%- item.licenceName %></p>
                            <h4 class="card-item__name"><%- item.productName %></h4>
                            <p class="card-item__price"><%- item.productPrice %></p>
                            <p class="card-item__promo"><%- item.productDues %> Cuotas sin Interés</p>
                        </div>
                    </a>
                </article>
            <% }); %>
        </section>
        <section class="pagination__container">
            <section class="pagination">
                <div class="pagination__page pagination__page__bg">
                    <img class="arrowPagination" src="../../img/icons/arrowPaginationLeft.png" alt="arrowLeft">
                </div>
                <div class="pagination__page pagination__page__target">
                    1
                </div>
                <div class="pagination__page">
                    2
                </div>
                <div class="pagination__page">
                    ...
                </div>
                <div class="pagination__page">
                    9
                </div>
                <div class="pagination__page">
                    10
                </div>
                <div class="pagination__page">
                    <img class="arrowPagination" src="../../img/icons/arrowPaginationRight.png" alt="arrowLeft">                    </div>
            </section>
        </section>   
    </section>
   
    
</main>
<%- include('../partials/footer') %>